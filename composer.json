{
  "name": "berlioz/config",
  "type": "library",
  "description": "Berlioz Configuration",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "http://www.berlioz-framework.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan.giron@berlioz-framework.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Config\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Config\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "berlioz/helpers": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "platform": {
      "php": "7.1.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
