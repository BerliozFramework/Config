{
  "name": "berlioz/config",
  "type": "library",
  "description": "Berlioz Configuration is a PHP library to manage your configuration files.",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Config\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Config\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "berlioz/helpers": "^1.0",
    "colinodell/json5": "^2.2"
  },
  "require-dev": {
    "ext-yaml": "*",
    "phpunit/phpunit": "^9.3"
  },
  "suggest": {
    "ext-yaml": "To use YamlAdapter"
  }
}
